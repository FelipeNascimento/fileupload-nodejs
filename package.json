{
  "name": "fileuploader-node-mongodbdemo",
  "version": "2.0.0",
  "description": "NodeJS file uploader using mongoDB gridFS system, writen completly in TypeScript",
  "main": "app.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/houssem-yahiaoui/mongdb-gridfs-demo.git"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node app.ts",
    "start": "nodemon ./dist/app.js",
    "prod": "npm run build && npm run start",
    "format": "prettier-standard '**/*.ts'"
  },
  "lint-staged": {
    "linters": {
      "**/*.js": [
        "prettier-standard",
        "git add"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "author": "Houssem Yahiaoui <houssem.yahiaoui.ai@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "busboy-body-parser": "^0.2.0",
    "express": "^4.14.0",
    "file-type": "^4.3.0",
    "gridfs-stream": "^1.1.1",
    "mongoose": "^4.6.8",
    "morgan": "^1.7.0",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "@types/express": "^4.16.1",
    "@types/node": "^11.9.4",
    "@types/winston": "^2.4.4",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.1",
    "prettier-standard": "^9.1.1"
  }
}
